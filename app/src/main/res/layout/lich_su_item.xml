<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bienBaoItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/truyenImage1"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:scaleType="centerCrop"
        android:background="@drawable/round_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image1" />

    <TextView
        android:id="@+id/truyenName1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="2"
        android:text="TextView"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/truyenImage1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewChapter1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chapter"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/truyenImage1"
        app:layout_constraintTop_toBottomOf="@+id/truyenName1" />

    <TextView
        android:id="@+id/textViewTime1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="time"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/truyenImage1"
        app:layout_constraintTop_toBottomOf="@+id/textViewChapter1" />

</androidx.constraintlayout.widget.ConstraintLayout>